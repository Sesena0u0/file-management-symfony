{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<div class="container" style="height: 100vh; width: 100vw">
    <div class="card continfouser row">
        <div class="col-lg-4 col-md-4 col-sm-4 col-12 userallparam">
            <div class="d-flex mb-3">
                <a class="users"></a>
                <div class="h-100 d-flex flex-column justify-content-center user-name">
                    <a class="text-white fs-5 ms-1 nav-link">
                        {{ app.user.getName }}
                    </a>
                </div>
            </div>
            <div class="d-flex flex-column">
                <div class="d-flex m-2 list_info c-pointer">
                    <div class="d-flex flex-column justify-content-center w-100">
                        <div class="d-flex justify-content-between w-100 " onclick="showInfoperso__( `{{ path('user_edit') }}`, '{{app.user.getName}}', '{{app.user.getEmail}}' )">
                            <div class="text-white mx-1">Personal Information</div>
                            <i class="fa fa-chevron-right text-white me-3 mt-1" ></i>
                        </div>
                    </div>
                </div>
                <a class="d-flex m-2 list_info nav-link" href="{{ path('app_logout') }}">
                    <div class="d-flex flex-column justify-content-center w-100">
                        <div class="d-flex justify-content-between w-100 " >
                            <div class="text-white mx-1">Logout</div>
                            <i class="fa fa-logout text-white me-3 mt-1" ></i>
                        </div>
                    </div>
                </a>
            </div>
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 col-12">
            <div class="info_content_user">
                
            </div>
        </div>
    </div>
</div>

{% for message in app.flashes('no_match') %}
    <div class="text-danger">
        {{ message }}
    </div>
{% endfor %}
{% for message in app.flashes('match') %}
    <div class="text-success">
        {{ message }}
    </div>
{% endfor %}

{% endblock %}
