{% extends 'connexion/base.html.twig' %}

{% block title %}Login{% endblock %}

{% block form %}

    <form action="{{ path('app_login') }}" method="post" >

        <div class="form-floating mb-4">
            <input type="email" id="username" name="_username" class="form-control form-control-lg" placeholder="exemples@mail.com" />
            <label class="form-label" for="email" id="username" value="{{ last_username }}" >Email address</label>
        </div>

        <div class="form-floating mb-3">
            <input type="password" id="password" name="_password" class="form-control form-control-lg" placeholder="*******" />
            <label class="form-label" for="mdp">Password</label>
        </div>
        
        {% if error %}
            <div class="mb-3 text-danger">
                {{ error.messageKey |trans(error.messageData, 'security') }}
            </div>
        {% endif %}

        

        <div class="text-center text-lg-start mt-4 pt-2">
            <button type="submite" class="btn btn-primary btn-lg" style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
            <p class="small fw-bold mt-2 pt-1 mb-0 text-white">Don't have an account? <a href="../signin" class="link-danger">Register</a></p>
        </div>
        
        {% for message in app.flashes('success') %}
            <div class="text-success">
                {{ message }}
            </div>
        {% endfor %}
    </form>

{% endblock %}
